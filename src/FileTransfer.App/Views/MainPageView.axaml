<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="using:FileTransfer.ViewModels"
             x:DataType="viewModels:MainPageViewModel"
             x:Class="FileTransfer.App.Views.MainPageView"
             mc:Ignorable="d"
             d:DesignWidth="900"
             d:DesignHeight="600">
  <Grid Margin="16" RowDefinitions="Auto,*,Auto,Auto" RowSpacing="12">
    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
      <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
        <Button Width="140" HorizontalContentAlignment="Center" Content="Add file" Command="{Binding AddFileCommand}" />
        <Button Width="140" HorizontalContentAlignment="Center" Content="Add folder" Command="{Binding AddFolderCommand}" />
        <Button Width="140" HorizontalContentAlignment="Center" Content="Remove selected" Command="{Binding RemoveSelectedCommand}" />
        <Button Width="140" HorizontalContentAlignment="Center" Content="Clear queue" Command="{Binding ClearQueueCommand}" />
      </StackPanel>
      <Button Grid.Column="1"
              Width="33" Height="33" Padding="8"
              HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
              Command="{Binding NavigateToSettingsCommand}"
              ToolTip.Tip="Settings">
        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
          <Path Data="M12 15.5A3.5 3.5 0 0 1 8.5 12 3.5 3.5 0 0 1 12 8.5a3.5 3.5 0 0 1 3.5 3.5 3.5 3.5 0 0 1-3.5 3.5m7.43-2.53c.04-.32.07-.64.07-.97 0-.33-.03-.66-.07-1l2.11-1.63c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.31-.61-.22l-2.49 1c-.52-.39-1.06-.73-1.69-.98l-.37-2.65A.506.506 0 0 0 14 2h-4c-.25 0-.46.18-.5.42l-.37 2.65c-.63.25-1.17.59-1.69.98l-2.49-1c-.23-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64L4.57 11c-.04.34-.07.67-.07 1 0 .33.03.65.07.97l-2.11 1.66c-.19.15-.25.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1.01c.52.4 1.06.74 1.69.99l.37 2.65c.04.24.25.42.5.42h4c.25 0 .46-.18.5-.42l.37-2.65c.63-.26 1.17-.59 1.69-.99l2.49 1.01c.23.09.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.66z"
                Fill="White"
                Stretch="Uniform" />
        </Viewbox>
      </Button>
    </Grid>

    <ListBox Grid.Row="1"
             ItemsSource="{Binding QueueView}"
             SelectedItem="{Binding SelectedQueueItem, Mode=TwoWay}">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <VirtualizingStackPanel />
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Spacing="8">
            <CheckBox IsVisible="{Binding CanSelectForUpload}"
                      IsChecked="{Binding IsSelected, Mode=TwoWay}" />
            <TextBlock Text="{Binding DisplayName}" />
            <TextBlock Text="{Binding IsFolder, StringFormat='Folder: {0}'}"
                       Opacity="0.6" />
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
      <ProgressBar Minimum="0"
                   Maximum="{Binding TotalItems}"
                   Value="{Binding CompletedItems}" />
      <StackPanel Grid.Column="1" Spacing="2">
        <TextBlock HorizontalAlignment="Right"
                   Text="{Binding ProgressText}" />
        <TextBlock HorizontalAlignment="Right"
                   Opacity="0.7"
                   Text="{Binding ByteProgressText}" />
      </StackPanel>
	
	  <Button Grid.Column="2"
			  Width="140" 
              HorizontalAlignment="Left"
			  HorizontalContentAlignment="Center" 
              Content="{Binding UploadButtonText}"
              Command="{Binding ToggleUploadCommand}" />
    </Grid>

    <TextBlock Grid.Row="3"
               Text="{Binding StatusText}"
               Opacity="0.8" />
  </Grid>
</UserControl>
